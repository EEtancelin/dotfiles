## Git command
alias  gs='echo ""; echo "Git Status"; git status -s ; echo ""; echo "Stash List" ; git stash list; echo ""; echo "Eslint" ; eslint ./src  | grep ✖'
alias  gst='git stash'
alias  gstl='git stash list'
alias  gstd='git stash drop'
alias  gsta='git stash apply'
alias  gaa='git add .'
alias  gca='git commit .'
alias  gaca='git add . && git commit .'
alias  gd='git --no-pager diff'
alias  gc.='git checkout .'
alias  gcp-zshrc='git commit zshrc -m 'zshrc improving' && git push '
alias  gcmp='git checkout master && git pull'
alias  grh1= 'git reset --hard HEAD^1'
alias  git-count= 'git count-objects -vH'
alias  git-lc='git diff HEAD^'
alias  g-dmb='git branch --merged master | grep -v "\* master" | xargs -n 1 git branch -d'
# Git Set upstream and Push
alias g-sup="git push -u origin HEAD"

#Hub
alias h-pr='hub pull-request'

#Git Push Pr and Checkmout Master
alias g-p-pr-ch-pl='git push -u origin HEAD && hub pull-request && git checkout master && git pull'

